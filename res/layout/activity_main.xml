<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.konstantin.sport.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тренировки"
        android:onClick="onClick"
        android:id="@+id/buttonTraining"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Диета"
        android:onClick="onClick"
        android:id="@+id/buttonDiet"
        android:layout_below="@+id/buttonRun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кардио"
        android:onClick="onClick"
        android:id="@+id/buttonRun"
        android:layout_below="@+id/buttonTraining"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Таймер"
        android:onClick="onClick"
        android:id="@+id/buttonTimer"
        android:layout_below="@+id/buttonPharm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Фото"
        android:onClick="onClick"
        android:id="@+id/buttonPhoto"
        android:layout_below="@+id/buttonTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Музыка"
        android:onClick="onClick"
        android:id="@+id/buttonMusic"
        android:layout_below="@+id/buttonPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:onClick="onClick"
        android:id="@+id/buttonSettings"
        android:layout_below="@+id/buttonMusic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Фармакология"
        android:id="@+id/buttonPharm"
        android:onClick="onClick"
        android:layout_below="@+id/buttonDiet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
